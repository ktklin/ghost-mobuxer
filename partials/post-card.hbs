<article class="post-card cell {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    <div class="post-card-inner">
        {{#if feature_image}}
            <div class="post-card-featured-image">
                <a class="post-card-image-link" href="{{url}}">
                    <figure class="post-card-image">
                        <img srcset="{{img_url feature_image size="s"}} 300w,
                                     {{img_url feature_image size="m"}} 600w,
                                     {{img_url feature_image size="l"}} 1000w,
                                     {{img_url feature_image size="xl"}} 2000w"
                             src="{{img_url feature_image size="m"}}"
                             alt="{{title}}"/>
                    </figure>
                </a>

                <div class="placeholder placeholder-featured-image"></div>
            </div>
        {{/if}}

        <div class="post-card-content">
            <header class="post-card-header">
                <a href="{{url}}">
                    <h4 class="post-card-title">{{title}}</h4>
                </a>
            </header>

            <section class="post-card-excerpt">
                <p>{{excerpt words="33"}}</p>
            </section>

            <footer class="post-card-meta">

                <ul class="author-list horizontal-list">
                    {{#foreach authors}}
                        <li class="author-list-item">
                            <a href="{{url}}">
                                <span class="author-name-tooltip">{{name}}</span>
                            </a>
                        </li>
                    {{/foreach}}
                </ul> 
                <span >
                <ul class="author-list horizontal-list">
                                {{#primary_tag}}
                                    <li><a href="{{url}}" class="tag">#{{name}}</a></li>
                                {{/primary_tag}}
                </ul>
                </span> 
                <span class="card-post-date">
                    <i class="far fa-clock"></i>
                    <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="DD MMMM YYYY"}}
                    </time>
                </span>
            </footer>

            <div class="placeholder-content-ct">
                <div class="placeholder-content-inner">
                    <div class="placeholder placeholder-title"></div>
                    <div class="placeholder placeholder-text placeholder-text1"></div>
                    <div class="placeholder placeholder-text placeholder-text2"></div>
                    <div class="placeholder placeholder-text placeholder-text3"></div>
                    <div class="placeholder placeholder-author"></div>
                    <div class="placeholder placeholder-date"></div>
                </div>
            </div>
        </div>
    </div>
</article>
