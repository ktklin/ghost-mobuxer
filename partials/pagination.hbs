<div class="hidden">
    <span class="curr-page">{{page}}</span>
    <span class="total-pages">{{pages}}</span>
</div>

<nav class="grid-x pagination-ct">
    <ul class="pagination text-center" role="navigation" aria-label="Pagination">
        {{#if prev}}
            <li class="pagination-previous"><a href="{{page_url prev}}">&Auml;ltere Artikel</a></li>
        {{else}}
            <li class="pagination-previous disabled">&Auml;ltere Artikel</li>
        {{/if}}
        {{#if next}}
            <li class="pagination-next"><a href="{{page_url next}}">Neuere Artikel</a></li>
        {{else}}
            <li class="pagination-next disabled">Neuere Artikel</li>
        {{/if}}
    </ul>
</nav>
